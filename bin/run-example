SCALA_VERSION=2.10
SPARK_VERSION=1.1.0

FWDIR="$(cd `dirname $0`/..; pwd)"

if [ -z "$1" ]; then
  echo "Usage: run-example <example-class> [<args>]" >&2
  exit 1
fi

# Figure out the JAR file that our examples were packaged into

EXAMPLES_DIR="$FWDIR"/examples

if [ -f "$FWDIR/RELEASE" ]; then
  export SPARK_EXAMPLES_JAR=`ls "$FWDIR"/lib/ddf_examples_$SCALA_VERSION-$SPARK_VERSION.jar`
elif [ -e "$EXAMPLES_DIR"/target/scala-$SCALA_VERSION/ddf_examples_$SCALA_VERSION-$SPARK_VERSION.jar ]; then
  export SPARK_EXAMPLES_JAR=`ls "$EXAMPLES_DIR"/target/scala-$SCALA_VERSION/ddf_examples_$SCALA_VERSION-$SPARK_VERSION.jar`
fi

if [[ -z $SPARK_EXAMPLES_JAR ]]; then
  echo "Failed to find DDF examples assembly in $FWDIR/lib or $FWDIR/examples/target" >&2
  echo "You need to build DDF with mvn install before running this program" >&2
  exit 1
fi

# Find java binary
if [ -n "${JAVA_HOME}" ]; then
  RUNNER="${JAVA_HOME}/bin/java"
else
  if [ `command -v java` ]; then
    RUNNER="java"
  else
    echo "JAVA_HOME is not set" >&2
    exit 1
  fi
fi

#setup java_opts
export JAVA_OPTS+=" -Dhive.metastore.warehouse.dir=/tmp/hive/warehouse"

CLASSPATH="$EXAMPLES_DIR"/target/scala-2.10/lib/*
CLASSPATH="$SPARK_EXAMPLES_JAR:$CLASSPATH"

echo $FWDIR
echo $SPARK_EXAMPLES_JAR
echo $CLASSPATH
echo $RUNNER
echo $JAVA_OPTS
echo $@
#java -Dhive.metastore.warehouse.dir=/tmp/hive/warehouse -cp examples/target/scala-2.10/ddf_examples_2.10-0.9.jar:examples/target/scala-2.10/lib/* io.spark.ddf.examples.RowCount
exec "$RUNNER" $JAVA_OPTS -cp "$CLASSPATH" "$@"



